    <form method="POST" action="whitelistAddress">
      <div class="row">
        <div class="col-4"></div>

        <div class="col-4" style="border : 2px black solid; background-color:rgb(25, 212, 141);">
          <div class="row mb-3 mt-4">
            <div class="col-12" style="text-align: center">
              <h2>User Registration</h2>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-12">
              <label for="user">Address of Company</label>
              <input type="text" class="form-control" name="user" id="user" required />
            </div>
          </div>




          <div class="row mb-4">
            <div class="col-12">
              <label for="password">Set password</label>
              <input type="password" name="password" class="form-control" id="password" required />

            <input type="checkbox" onclick="myFunction()">Show Password

          <script>
          function myFunction() {
            var x = document.getElementById("password");
            if (x.type === "password") {
              x.type = "text";
            } else {
              x.type = "password";
            }
          }
          </script>
                      </div>
                    </div>


          <div class="row mb-4">
            <div class="col-3"></div>
            <div class="col-6">
              <input type="submit" value="Register User" class="btn btn-block btn-success" />
            </div>
          </div>
       
</div>
</div>
