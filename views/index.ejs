    <form method="POST" action="setEmployee">
      <div class="row">
        <div class="col-4"></div>

        <div class="col-4" style="border : 1px rgb(5, 5, 5) solid; background-color:rgb(25, 212, 141); width:1330px;">
          <div class="row mb-3 mt-4">
            <div class="col-12" style="text-align: center">
              <h2>Employee  Registration</h2>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-12">
              <label for="empid">Employee ID</label>
              <input type="text" class="form-control" name="empid" id="empid" required />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-12">
              <label for="firstname">First Name</label>
              <input type="text" class="form-control" name="firstname"  id="firstname" required />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-12">
              <label for="lastname">Last Name</label>
              <input type="text" class="form-control" name="lastname"  id="lastname" required />
            </div>
          </div>
        
          <div class="row mb-3">
            <div class="col-12">
              <label for="email">Email</label>
              <input type="text" name="email"  class="form-control" id="email" required />
            </div>
          </div>



          <div class="row mb-4">
            <div class="col-12">
              <label for="ph">Phone number</label>
              <input type="text" name="ph" class="form-control" id="ph" required />
            </div>
          </div>


          <div class="row mb-4">
            <div class="col-12">
              <label for="country">Country</label>
              <input type="text" name="country" class="form-control" id="country" required />
            </div>
          </div>


          <div class="row mb-4">
            <div class="col-12">
              <label for="address">Address</label>
              <input type="text" name="address" class="form-control" id="address" required />
            </div>
          </div>


          <div class="row mb-4">
            <div class="col-12">
              <label for="designation">designation</label>
              <input type="text" name="designation" class="form-control" id="designation" required />
            </div>
          </div>


          <div class="row mb-4">
            <div class="col-12">
              <label for="password">Set password</label>
              <input type="password" name="password" class="form-control" id="password" required />



              <input type="checkbox" onclick="myFunction()">Show Password

<script>
function myFunction() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>
            </div>
          </div>

          
          <div class="row mb-4">
            <div class="col-3"></div>
            <div class="col-6">
              <input type="submit" value="Register Employee" class="btn btn-block btn-success" />
            </div>
          </div>
        </div>
      </div>
    </form>

